<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
        <%= link_to root_path, :id => "logo" do %>
           OmniEye 
        <%end%>
      <nav>
        <ul class="nav pull-right">

            <li>
                <%= link_to camera_url do %>
                    <i class = "icon-facetime-video"></i> camera app
                <% end %>
            </li> 
            <li>
                <%= link_to monitor_url do %> 
                    <i class = "icon-eye-open"></i> remote monitor
                <% end %>
            </li>
            
            <% if signed_in? %>
                <li id="fat-menu" class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-user"></i> <%= current_user.name %> <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "settings", "#" %></li> 
                        <li><%= link_to "my account", "#" %></li>
                        <li class="divider"></li>
                        <li>
                            <%= link_to "logout", logout_path, :method => "delete" %>
                        </li>
                    </ul>
                </li>
            <% else %>

                <li><%= link_to "Login", login_path %></li>
            <% end %>
        </ul>
      </nav>
    </div>
  </div>    
</header>




